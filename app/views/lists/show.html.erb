<h1><%= @list.name %></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
   <li><%= image_tag bookmark.movie.poster_url, alt: "movie", width: 200  %></li>
    <li><%= bookmark.movie.title %></li>
    <li><%= bookmark.movie.overview %></li>
    <li><%= bookmark.movie.rating %></li>
    <li><%= bookmark.comment %></li>
    <p><%= link_to "Delete Bookmark", bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</ul>

<%= link_to "Add new movie", new_list_bookmark_path(@list) %>
<%= link_to "back to list", lists_path %>
